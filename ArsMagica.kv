<FichaScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            size: root.ids.label_nome.texture_size
            Label:
                id: label_nome
                text: 'Nome:'
                size_hint_y: None
                size: self.texture_size
            TextInput:
                size_hint_y: None
                size: root.ids.label_nome.texture_size
            Label:
                text: 'Tipo:'
                size_hint_y: None
                size: self.texture_size
            Button:
                id: tipo_botão
                Text: 'Tipo'
                on_release: TipoDropDown.open
        BoxLayout:
            size_hint_y: None
            size: root.ids.label_joaquim.texture_size
            Label:
                id: label_joaquim
                text: 'Joaquim'
                size_hint_y: None
                size: self.texture_size
            Label:
                id: label_marie
                text: 'Marie'
                size_hint_y: None
                size: self.texture_size
        Label:
            text: 'Aziel de Fontes Melo'

<TipoDropDown>:
     on_select: root.ids.tipo_botão.text = '{}'.format(args[1])
     Button:
        text: 'Magus'
        size_hint_y: None
        height: 44
        on_release: tipodropdown.select('Magus')
     Button:
        text: 'Companheiro'
        size_hint_y: None
        height: 44
        on_release: tipodropdown.select('Companheiro')
     Button:
        text: 'Groge'
        size_hint_y: None
        height: 44
        on_release: tipodropdown.select('Groge')
