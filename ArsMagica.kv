<FichaScreen>:

    tipoBotao: tipoBotao
    FloatLayout:
        Button:
            text: 'tipo'
            id: tipoBotao
            pos_hint: {"x": 0, "top": 0.8}
            size_hint: 0.1, 0.1
            on_release:
                tipodropdown.open(self)

            DropDown:
                id: tipodropdown

                Button:
                    text: 'My first Item'
                    size_hint_y: None
                    height: 44
                Button:
                    text: 'My second Item'
                    size_hint_y: None
                    height: 44
                Button:
                    text: 'Groge'
                    size_hint_y: None
                    height: 44


<CustomDropDown>:
    Button:
        text: 'My first Item'
        on_release: root.select('Magus')
        height: 44
    Button:
        text: 'My second Item'
        on_release: root.select('Companheiro')
        height: 44
    Button:
        text: 'Groge'
        on_release: root.select('Groge')
        height: 44