<FichaScreen>:

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        BoxLayout:
            Label:
                text: 'Nome: '
            TextInput:
            Label:
                text: 'Tipo: '
            Button:
                text: 'tipo'
                id: tipoBotao
                on_release:
                    tipodropdown.open(self)

                DropDown:
                    id: tipodropdown
                    on_select: tipoBotao.text = '{}'.format(args[1])
                    Button:
                        text: 'Magus'
                        size_hint_y: None
                        height: 44
                        on_release: tipodropdown.select('Magus')
                    Button:
                        text: 'Companheiro'
                        size_hint_y: None
                        height: 44
                        on_release: tipodropdown.select('Companheiro')
                    Button:
                        text: 'Groge'
                        size_hint_y: None
                        height: 44
                        on_release: tipodropdown.select('Groge')

        BoxLayout:
            Label:
                text: 'Idade'
            TextInput:
                id: idade
                multiline: False
                on_text_validate:
                    root.calcula_custo_hab()
            Label:
                text: 'Xp:'
            Label:
                id: xp
        Label:
            text: 'Características'
        BoxLayout:
            Label:
                text: 'Pontos disponíveis para Características'
            Label:
                id: ptCarac
                multiline: False
        BoxLayout:
            Label:
                text: 'Inteligência'
            TextInput:
                id: Inteligencia
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Percepção'
            TextInput:
                id: Percepção
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Presença'
            TextInput:
                id: Presença
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Comunicação'
            TextInput:
                id: Comunicação
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Força'
            TextInput:
                id: Força
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Vigor'
            TextInput:
                id: Vigor
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()

        BoxLayout:
            Label:
                text: 'Destreza'
