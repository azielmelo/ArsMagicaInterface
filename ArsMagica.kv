                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        BoxLayout:
            Label:
                text: 'Rapidez'
            TextInput:
                id: Rapidez
                multiline: False
                on_text_validate:
                    root.calcula_custo_carac()
        Label:
            text: 'Habilidades'
        Label:
            text: 'Combate'
        BoxLayout:
            Label:
                text: 'habilidade'
            Label:
                text: 'especialidade'
            Label:
                text: 'valor'
        BoxLayout:
            Label:
                text: 'Armas de uma Mão'
            TextInput:
                multiline: False
            TextInput:
                id: armas_de_uma_mao
                multiline: False
